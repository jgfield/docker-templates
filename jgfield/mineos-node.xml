<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Beta>False</Beta>
  <Category>MediaServer:Other</Category>
  <Name>mineos-node</Name>
  <Description>
   mineos-node is the latest version of a web management interface for creating Minecraft Servers.[br][br]
    [b][span style='color: #E80000;']Directions:[/span][/b][br]
    [b]/var/games/minecraft[/b] : set this path to where you wish all the Minecraft Server items to be stored. Should be your app folder.[br][br]
  </Description>
  <Registry>https://registry.hub.docker.com/u/jgfield/mineos-node/</Registry>
  <GitHub>https://github.com/hexparrot/mineos-node</GitHub>
  <Repository>jgfield/mineos-node</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
 <Environment>
    <Variable>
      <Name>PASSWORD</Name>
      <Value>minecraft</Value>
    </Variable>
  </Environment>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8443</HostPort>
        <ContainerPort>8443</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>25565</HostPort>
        <ContainerPort>25565</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>25566</HostPort>
        <ContainerPort>25566</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>25567</HostPort>
        <ContainerPort>25567</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>25568</HostPort>
        <ContainerPort>25568</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>25569</HostPort>
        <ContainerPort>25569</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/mineos-node/</HostDir>
      <ContainerDir>/var/games/minecraft</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>https://[IP]:[PORT:8443]</WebUI>
  <Banner>http://i.imgur.com/P6RRtHH.png</Banner>
  <Icon>http://i.imgur.com/P6RRtHH.png</Icon>
</Container>

